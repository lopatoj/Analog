<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analog.ViewViewModels.Main.MainView"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Button Text="Open Camera"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#3A3B3C"
                    FontSize="18"
                    CornerRadius="5"
                    Command="{Binding OnCameraClicked}"/>

            <Button Text="Open Gallery"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#3A3B3C"
                    FontSize="18"
                    CornerRadius="5"
                    Command="{Binding OnGalleryClicked}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>