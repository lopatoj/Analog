<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analog.ViewViewModels.Settings.SettingsView"
             Title="{Binding Title}"
             >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout HorizontalOptions="FillAndExpand">
                <StackLayout HorizontalOptions="Center">
                    <Label FontAttributes="Bold"
                           FontSize="Large"/>
                </StackLayout>

                <Slider x:Name="Accuracy" Value="0.5"
                        ThumbColor="Aquamarine"
                        MinimumTrackColor="Bisque"
                        MaximumTrackColor="PaleVioletRed"/>
            </StackLayout>

            <Label Text="Moving Slider will change the accuracy"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>