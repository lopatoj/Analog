<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analog.ViewViewModels.Settings.SettingsView"
             Title="{Binding Title}"
             >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout BindingContext="{x:Reference slider}"
                         HorizontalOptions="FillAndExpand">
                <BoxView Color="Blue"
                         Opacity="{BindingValue}"/>
                <StackLayout HorizontalOptions="Center">
                    <Label Text="{Binding Value,
                        StringFormat = 'Accuracy value is {0:F2}'}"
                           FontAttributes="Bold"
                           FontSize="Large"
                           Opacity="{Binding Value}"/>
                </StackLayout>

                <Slider x:Name="Accuracy" Value="0.5"
                        ThumbColor="Aquamarine"
                        MinimumTrackColor="Bisque"
                        MaximumTrackColor="PaleVioletRed"/>
            </StackLayout>

            <Label Text="Moving Slider will change the accuracy"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>