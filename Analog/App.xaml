<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Analog.App">
    <Application.Resources>
        
        <Color x:Key="primary-back-title-color">#000</Color>
        <Color x:Key="primary-background-color">#000</Color>
        <Style ApplyToDerivedTypes="true" TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource Key=primary-back-title-color}"></Setter>
            <Setter Property="BackgroundColor" Value="{StaticResource Key=primary-background-color}"></Setter>
        </Style>
    </Application.Resources>
</Application>